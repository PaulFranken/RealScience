
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.paulfranken.realscience.PlanetsActivity"
    android:background="#003153" >

    <TextView android:text="diameter" android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/diameter"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:clickable="true"
        android:alpha="0.0"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true" />

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_below="@+id/diameter"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/planetsExplanation"
        android:id="@+id/planetsIntro"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_below="@+id/planetsIntro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="circumference"
        android:id="@+id/circumference"
        android:layout_below="@+id/diameter"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="mass"
        android:id="@+id/mass"
        android:layout_below="@+id/circumference"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="density"
        android:id="@+id/density"
        android:layout_below="@+id/mass"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:alpha="0.0"/>



    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


    </FrameLayout>

    <SurfaceView
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:id="@+id/surfaceView"
        android:layout_weight="1"
        android:alpha="0.0"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Earth for example has:"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/surfaceView"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#ffffff"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A diameter of 12,742km"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:textColor="#f6ff00"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A circumference of 40,075km"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#ffa200"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A mass of 5.972^24kg"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#ffffff"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="And a density of 5.514g/cm3"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textColor="#ffffff"
        android:alpha="0.0"/>

</RelativeLayout>

